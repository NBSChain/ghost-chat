<UserControl x:Class="TerzoApp.Views.ChatControlViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TerzoApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="610" d:DesignWidth="980">
    <!-- Copyright © NBS-Tech Team 2019.All rights reserved. -->
    <DockPanel LastChildFill="True">
        <Border x:Name="LeftBorder" Background="LightGray" Opacity="0.3" DockPanel.Dock="Left" Width="280"
                BorderBrush="DarkGoldenrod" BorderThickness="0,0,2,0">
            <DockPanel LastChildFill="True" >
                <Grid DockPanel.Dock="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="55"/>
                    </Grid.RowDefinitions>
                    <StackPanel x:Name="AvatarPanel" DockPanel.Dock="Top" Grid.Column="0" Grid.Row="0"
                            Orientation="Horizontal" Height="80" VerticalAlignment="Top">
                        <Image Source="pack://application:,,,/Images/avatars/fuchen200.png" Width="50" Height="50" Margin="10,0,10,0"
                   VerticalAlignment="Center"/>
                        <Label Content="Lanbery" FontSize="18" VerticalContentAlignment="Top" Foreground="WhiteSmoke"/>
                    </StackPanel>
                    <StackPanel x:Name="Searcher" DockPanel.Dock="Top" Height="35"
                                Grid.Column="0" Grid.Row="1">
                        <!-- 搜索 -->
                    </StackPanel>
                    <Grid x:Name="NavTabBar" Grid.Column="0" Grid.Row="2">

                    </Grid>
                </Grid>
                <StackPanel x:Name="LeftListBoxStack"  VerticalAlignment="Center">
                    <Label Content="联系人列表" Foreground="Red" FontSize="32"  HorizontalAlignment="Center"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- 右侧 -->
        <DockPanel LastChildFill="True">

            <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
                <Label x:Name="CurrentChatTitle" Grid.Row="0" 
                Content="群聊(当前在线2人)" FontSize="16" Margin="10,5,0,5" Foreground="White"/>
            </StackPanel>
            <ListBox x:Name="MessageList" DockPanel.Dock="Top">
                <ListBoxItem BorderBrush="LightSlateGray" BorderThickness="0,0,0,2">
                    <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                        <Image Source="pack://application:,,,/Images/avatars/fuchen200.png" Width="50"  Margin="10,0,10,0"/>
                        <TextBlock TextWrapping="WrapWithOverflow" Text="你好....." Margin="0,5,0,2" FontSize="14" ></TextBlock>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem BorderBrush="LightSlateGray" BorderThickness="0,0,0,2">
                    <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                        <Image Source="pack://application:,,,/Images/avatars/fuchen200.png" Width="50"  Margin="10,0,10,0"/>
                        <TextBlock TextWrapping="WrapWithOverflow" Text="你好....." Margin="0,5,0,2" FontSize="14" ></TextBlock>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem BorderBrush="LightSlateGray" BorderThickness="0,0,0,2" HorizontalContentAlignment="Right">
                    <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight" >
                        <TextBlock TextWrapping="WrapWithOverflow" Text="你好....." Margin="0,5,5,2" FontSize="14" ></TextBlock>
                        <Image Source="pack://application:,,,/Images/avatars/fuchen200.png" Width="50"  Margin="10,0,10,0"/>
                    </StackPanel>
                </ListBoxItem>                
            </ListBox>
            <Grid DockPanel.Dock="Bottom" Height="160" VerticalAlignment="Bottom">
                <TextBox x:Name="Send_text" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" >
                    hello
                </TextBox>
            </Grid>
        </DockPanel>

    </DockPanel>
    

</UserControl>
